<div class="pb-13 pt-lg-0 pt-5">
  <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">Forgot your password?</h3>
  <p class="text-muted font-weight-bolder font-size-h4">Enter your email to reset your password</p>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.input :email, input_html: { autofocus: true, autocomplete: "email", class: "form-control-solid h-auto p-5 rounded-lg" }, label_html: { class: "font-size-h6 font-weight-bolder text-dark" } %>

  <%= f.submit "Submit", class: "btn btn-primary font-weight-bolder btn-block font-size-h6 px-8 py-4 my-3 mr-3" %>
<% end %>

<%= link_to "Back to Sign In", new_session_path(resource_name), class: "text-primary font-weight-bolder font-size-h6" %>
