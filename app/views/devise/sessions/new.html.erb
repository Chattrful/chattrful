<div class="pb-13 pt-lg-0 pt-5">
  <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">Welcome to Chattrful</h3>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <span class="text-muted font-weight-boldest font-size-h4">New Here?
    <%= link_to "Create an Account", new_registration_path(resource_name), class: "text-primary font-weight-bolder font-size-h4" %>
  <% end %>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :email, input_html: { autofocus: true, autocomplete: "email", class: "form-control-solid h-auto p-5 rounded-lg" }, label_html: { class: "font-size-h6 font-weight-bolder text-dark" } %>

  <div class="d-flex justify-content-between">
    <%= f.label :password, class: "font-size-h6 font-weight-bolder text-dark"  %>
    <%= link_to "Forgot Password?", new_password_path(resource_name), class: "text-primary font-size-h6 font-weight-bolder text-hover-primary" %>
  </div>
  <%= f.input :password, input_html: { autocomplete: "current-password", class: "form-control-solid h-auto p-5 rounded-lg" }, label: false %>

  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, as: :boolean %>
  <% end %>

  <%= f.submit "Sign In", class: "btn btn-primary font-weight-bolder btn-block font-size-h6 px-8 py-4 my-3 mr-3" %>
<% end %>
