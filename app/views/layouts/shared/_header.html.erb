<div id="kt_header" class="header header-fixed">
  <div class="container-fluid d-flex align-items-stretch justify-content-between">
    <div class="header-menu-wrapper header-menu-wrapper-left" id="kt_header_menu_wrapper">
      <div id="kt_header_menu" class="header-menu header-menu-mobile header-menu-layout-default">
      </div>
    </div>
    <div class="topbar">
      <div class="dropdown">
        <div class="topbar-item" data-toggle="dropdown" data-offset="10px,0px">
          <div class="btn btn-icon btn-icon-mobile w-auto btn-clean d-flex align-items-center btn-lg px-2 dropdown-toggle">
            <%= user_avatar(user: current_user) %>
          </div>
        </div>

        <div class="dropdown-menu p-0 m-0 dropdown-menu-anim-up dropdown-menu-sm dropdown-menu-right">
          <ul class="navi navi-hover py-4">
            <li class="navi-item">
              <%= link_to '#', class: "text-hover-primary navi-link" do %>
                <i class="far fa-cog mr-3 align-middle"></i>
                <span class="navi-text align-middle">Settings</span>
              <% end %>
            </li>

            <li class="navi-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "text-hover-primary navi-link" do %>
                <i class="far fa-sign-out mr-3 align-middle"></i>
                <span class="navi-text align-middle">Sign Out</span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
